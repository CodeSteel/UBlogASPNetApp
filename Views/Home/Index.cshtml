@{
    ViewData["Title"] = "Home Page";
}

@model List<UBlog.Models.Post>

<div class="container-fluid">
@foreach (var item in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <div class="card-title">
                <b style="font-size: 30px; padding: 0px;">@Html.DisplayFor(modelItem => item.Title)</b>
                <i style="font-size: 12px; margin-left: 10px;">#@Html.DisplayFor(modelItem => item.Id)</i>
            </div>
            <p class="card-text">
                @Html.DisplayFor(modelItem => item.Body)
            </p>

            <div>
                <p class="card-subtitle">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" color="#3ba45c" fill="currentColor" class="bi bi-calendar-fill" viewBox="0 0 16 16">
                        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V5h16V4H0V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5" />
                    </svg>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </p>
                <p class="card-subtitle mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" color="#3ba45c" fill="currentColor" class="bi bi-hourglass-bottom" viewBox="0 0 16 16">
                        <path d="M2 1.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1h-11a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1-.5-.5m2.5.5v1a3.5 3.5 0 0 0 1.989 3.158c.533.256 1.011.791 1.011 1.491v.702s.18.149.5.149.5-.15.5-.15v-.7c0-.701.478-1.236 1.011-1.492A3.5 3.5 0 0 0 11.5 3V2z" />
                    </svg>
                    @Html.DisplayFor(modelItem => item.LastEditedAt)
                </p>
            </div>

            <br />

            <a class="card-link btn btn-outline-success" asp-action="CreateEditPost" asp-route-id="@item.Id">Edit</a>
            <a class="card-link btn btn-outline-danger" asp-action="DeletePost" asp-route-id="@item.Id">Delete</a>
        </div>
    </div>
}
</div>